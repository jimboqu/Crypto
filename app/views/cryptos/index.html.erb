

<h1>Listing Cryptos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Amount owned</th>
      <th>Cost per</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <tr>
    <% @cryptos.each do |crypto| %>
      <% if user_signed_in? %>
        <% @foundcrypto.each do |c| %>
        <% if c["symbol"] == crypto.symbol.upcase %>
        <td><%= c["name"] %></td>
      <% end %>
 
<% end %>
     
        <td><%= crypto.symbol.upcase %></td>
        <td><%= crypto.amount_owned %></td>
        <td><%= crypto.cost_per %></td>
        <td><%= link_to 'Show', crypto %></td>
        <td><%= link_to 'Edit', edit_crypto_path(crypto) %></td>
        <td><%= link_to 'Destroy', crypto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crypto', new_crypto_path, class: "btn btn-info" %>
